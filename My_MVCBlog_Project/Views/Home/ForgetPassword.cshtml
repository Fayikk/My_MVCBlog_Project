<div class="card text-center" style="width:300px" >
    <div class="card-header h5 text-white bg-primary">
        Password Reset
    </div>
    <div class="card-body px-5">
        <p class="card-text py-2" >
            Enter Your Email Address And Check Your Mail Box
        </p>
        <form method="post" asp-action="ForgetPasswordPost">
            <div class="form-outline" >
                <input type="email" id="email" name="email" class="form-control my-3" />
                <label class="form-label" for="typeEmail" >Email Input</label>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" >Gönder</button>
            </div>

        </form>
    </div>
</div>