@model ChangePasswordModel

<form asp-action="ImplementChangePassword">
    <div class="form-outline mb-4">
        <input type="text" id="guid" name="guid" class="form-control" asp-for="@Model.Guid" hidden />

    </div>
    <div class="form-outline mb-4" >
        <input type="password" asp-for="NewPassword" class="form-control" />
        <label class="form-label" >Parolanız</label>
        <span asp-validation-for="NewPassword" class="text-danger small" ></span>
    </div>
    <div class="form-outline mb-4">
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
        <label class="form-label">Parola Tekrarı</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <div>
        <button class="btn btn-secondary" type="submit" >Değiştir</button>
    </div>
</form>