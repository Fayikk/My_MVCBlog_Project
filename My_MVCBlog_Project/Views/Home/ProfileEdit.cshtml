@{
    ViewData["Title"] = "Profili Düzenle";
    int userId = ViewContext.HttpContext.Session.GetInt32(Constants.UserId).Value;
}

<div class="row p-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row offset-1">
    <div class="col-4">
       <img class="rounded-circle img-thumbnail" src="/images/userImage_@(userId).jpg" />
        <div class="mt-4">
            <form method="post" asp-action="ProfileImageSave" enctype="multipart/form-data">
                 <div>
                     <input id="profileImage" name="profileImage" type="file" class="form-control" accept=".jpg,.jpeg" />
                     <small>Lütfen sadece Jpeg ve jpg formatında resim yükleyiniz</small>
                 </div>
                 <div class="mt-3 text-center ">
                     <button type="submit" class="btn btn-primary text-center">
                         <i class="fa fa-upload mr-4"></i>Yükle
                     </button>
                 </div>
             </form>
        </div>
    </div>
</div>
